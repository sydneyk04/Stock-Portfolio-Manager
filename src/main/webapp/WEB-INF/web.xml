<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Project2</display-name>
  <servlet>
  	<servlet-name>GreetingServlet</servlet-name>
  	<servlet-class>csci310.servlets.GreetingServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>csci310.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SignUpServlet</servlet-name>
  	<servlet-class>csci310.servlets.SignUpServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>HomeServlet</servlet-name>
  	<servlet-class>csci310.servlets.HomeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PortfolioServlet</servlet-name>
  	<servlet-class>csci310.servlets.PortfolioServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>StockPerformanceServlet</servlet-name>
  	<servlet-class>csci310.servlets.StockPerformanceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>GreetingServlet</servlet-name>
  	<url-pattern>/greeting</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SignUpServlet</servlet-name>
  	<url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>HomeServlet</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>PortfolioServlet</servlet-name>
  	<url-pattern>/portfolio</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>StockPerformanceServlet</servlet-name>
  	<url-pattern>/stockperformance</url-pattern>
  </servlet-mapping>
</web-app>